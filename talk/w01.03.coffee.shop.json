  "meta": {
    "week": "W01",
    "lesson": "03",
    "scene": "coffee.shop",
    "title_zh": "選擇杯子大小"
  },
  "dialogue": [
    { "role": "teacher", "text": "What size would you like?", "zh": "你想要什麼尺寸？", "ja": "サイズはどうしますか？" },
    { "role": "student", "text": "I’m not sure.", "zh": "我不太確定。", "ja": "まだ決めていません。" },

    { "role": "teacher", "text": "We have small, medium, and large.", "zh": "我們有小杯、中杯和大杯。", "ja": "スモール、ミディアム、ラージがあります。" },
    { "role": "student", "text": "What’s the difference?", "zh": "差別在哪裡？", "ja": "違いは何ですか？" },

    { "role": "teacher", "text": "The size changes the amount of coffee.", "zh": "尺寸會影響咖啡的份量。", "ja": "サイズで量が変わります。" },
    { "role": "student", "text": "Is medium popular?", "zh": "中杯很受歡迎嗎？", "ja": "ミディアムは人気ですか？" },

    { "role": "teacher", "text": "Yes, it’s our most popular size.", "zh": "是的，那是我們最受歡迎的尺寸。", "ja": "はい、一番人気のサイズです。" },
    { "role": "student", "text": "That sounds good.", "zh": "聽起來不錯。", "ja": "いいですね。" },

    { "role": "teacher", "text": "Medium is a good balance.", "zh": "中杯的份量很剛好。", "ja": "ミディアムはちょうどいい量です。" },
    { "role": "student", "text": "I don’t want too much.", "zh": "我不想要太多。", "ja": "多すぎるのは避けたいです。" },

    { "role": "teacher", "text": "Then medium should be fine.", "zh": "那中杯應該很適合你。", "ja": "ではミディアムがいいですね。" },
    { "role": "student", "text": "Okay, medium please.", "zh": "好，那我要中杯。", "ja": "じゃあ、ミディアムでお願いします。" },

    { "role": "teacher", "text": "Would you like it hot or iced?", "zh": "你要熱的還是冰的？", "ja": "ホットにしますか、アイスにしますか？" },
    { "role": "student", "text": "Iced.", "zh": "冰的。", "ja": "アイスで。" },

    { "role": "teacher", "text": "The cup size stays the same.", "zh": "杯子大小是一樣的。", "ja": "サイズは同じです。" },
    { "role": "student", "text": "That’s good to know.", "zh": "知道這點很好。", "ja": "それは助かります。" },

    { "role": "teacher", "text": "Anything else about the size?", "zh": "尺寸方面還有想問的嗎？", "ja": "サイズについて他に質問はありますか？" },
    { "role": "student", "text": "No, that’s clear.", "zh": "沒有，已經很清楚了。", "ja": "いいえ、分かりました。" },

    { "role": "teacher", "text": "Alright, medium iced coffee.", "zh": "好的，一杯中杯冰咖啡。", "ja": "では、ミディアムのアイスコーヒーですね。" },
    { "role": "student", "text": "Sounds perfect.", "zh": "聽起來很完美。", "ja": "完璧です。" },

    { "role": "teacher", "text": "I’ll prepare it for you.", "zh": "我幫你準備。", "ja": "お作りしますね。" },
    { "role": "student", "text": "Thank you.", "zh": "謝謝。", "ja": "ありがとうございます。" },

    { "role": "teacher", "text": "It won’t take long.", "zh": "不會等太久。", "ja": "あまりお待たせしません。" },
    { "role": "student", "text": "No problem.", "zh": "沒問題。", "ja": "大丈夫です。" }
  ]
}

