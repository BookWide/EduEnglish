  "dialogue": [
    {
      "role": "assistant",
      "text": "Here’s some context."
    },
    {
      "role": "user",
      "text": "Sure."
    },
    {
      "role": "assistant",
      "text": "We received new requirements."
    },
    {
      "role": "user",
      "text": "From the client?"
    },
    {
      "role": "assistant",
      "text": "Yes, last Friday."
    },
    {
      "role": "user",
      "text": "What changed?"
    },
    {
      "role": "assistant",
      "text": "They want an extra feature."
    },
    {
      "role": "user",
      "text": "Does it affect scope?"
    },
    {
      "role": "assistant",
      "text": "Yes, slightly."
    },
    {
      "role": "user",
      "text": "So we need an update."
    },
    {
      "role": "assistant",
      "text": "Exactly."
    },
    {
      "role": "user",
      "text": "Let’s adjust the plan."
    },
    {
      "role": "assistant",
      "text": "I’ll summarize in an email."
    },
    {
      "role": "user",
      "text": "Great."
    },
    {
      "role": "assistant",
      "text": "I’ll send it by end of day."
    },
    {
      "role": "user",
      "text": "Thank you."
    }
  ],
