{
  "meta": {
    "week": "W01",
    "lesson": "06",
    "scene": "coffee.shop",
    "title_zh": "取餐與道別"
  },
  "dialogue": [
    { "role": "teacher", "text": "Order for Alex.", "zh": "Alex 的訂單好了。", "ja": "アレックスさんのご注文です。" },
    { "role": "student", "text": "That’s me.", "zh": "是我。", "ja": "私です。" },

    { "role": "teacher", "text": "Here’s your iced latte.", "zh": "這是你的冰拿鐵。", "ja": "こちらがアイスラテです。" },
    { "role": "student", "text": "Looks great.", "zh": "看起來很棒。", "ja": "おいしそうです。" },

    { "role": "teacher", "text": "Careful, the cup is cold.", "zh": "杯子很冰，小心。", "ja": "カップが冷たいのでお気をつけください。" },
    { "role": "student", "text": "Got it.", "zh": "知道了。", "ja": "分かりました。" },

    { "role": "teacher", "text": "Would you like a lid?", "zh": "需要杯蓋嗎？", "ja": "フタはお付けしますか？" },
    { "role": "student", "text": "Yes, please.", "zh": "要，謝謝。", "ja": "はい、お願いします。" },

    { "role": "teacher", "text": "Here you go.", "zh": "給你。", "ja": "どうぞ。" },
    { "role": "student", "text": "Thanks.", "zh": "謝謝。", "ja": "ありがとうございます。" },

    { "role": "teacher", "text": "Did you want a straw as well?", "zh": "也需要吸管嗎？", "ja": "ストローも要りますか？" },
    { "role": "student", "text": "Yes, that would be great.", "zh": "要，謝謝。", "ja": "はい、助かります。" },

    { "role": "teacher", "text": "Here’s a straw.", "zh": "這是吸管。", "ja": "こちらがストローです。" },
    { "role": "student", "text": "Perfect.", "zh": "太好了。", "ja": "完璧です。" },

    { "role": "teacher", "text": "Enjoy your drink.", "zh": "請慢用。", "ja": "どうぞお楽しみください。" },
    { "role": "student", "text": "I will.", "zh": "我會的。", "ja": "はい。" },

    { "role": "teacher", "text": "If you need anything, let us know.", "zh": "需要什麼隨時告訴我們。", "ja": "何かあればお知らせください。" },
    { "role": "student", "text": "Sure.", "zh": "好的。", "ja": "はい。" },

    { "role": "teacher", "text": "Are you staying or heading out?", "zh": "你要留下來還是要離開？", "ja": "店内で飲みますか、それとも出られますか？" },
    { "role": "student", "text": "I’m heading out.", "zh": "我要走了。", "ja": "出ます。" },

    { "role": "teacher", "text": "Alright. Have a nice day.", "zh": "好的，祝你有美好的一天。", "ja": "それでは、良い一日を。" },
    { "role": "student", "text": "You too.", "zh": "你也是。", "ja": "あなたも。" },

    { "role": "teacher", "text": "Hope to see you again.", "zh": "希望下次再見到你。", "ja": "またお会いできるのを楽しみにしています。" },
    { "role": "student", "text": "I’ll be back.", "zh": "我會再來的。", "ja": "また来ます。" }
  ]
}
