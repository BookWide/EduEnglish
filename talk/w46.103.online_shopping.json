  "id": "w46.103.online_shopping",
  "meta": {
    "title": "W46-3 · Online Shopping（申請退貨）",
    "week": 46,
    "lesson": 3
  },
  "dialogue": [
    {
      "role": "assistant",
      "text": "I’d like to return an item."
    },
    {
      "role": "user",
      "text": "May I ask the reason?"
    },
    {
      "role": "assistant",
      "text": "I changed my mind."
    },
    {
      "role": "user",
      "text": "That’s fine."
    },
    {
      "role": "assistant",
      "text": "Is the item unused?"
    },
    {
      "role": "user",
      "text": "Yes, unopened."
    },
    {
      "role": "assistant",
      "text": "Great. We can process a return."
    },
    {
      "role": "user",
      "text": "What’s the deadline?"
    },
    {
      "role": "assistant",
      "text": "Within 7 days of delivery."
    },
    {
      "role": "user",
      "text": "I’m within that."
    },
    {
      "role": "assistant",
      "text": "I’ll generate a return label."
    },
    {
      "role": "user",
      "text": "Thanks."
    },
    {
      "role": "assistant",
      "text": "Drop it off at any convenience store."
    },
    {
      "role": "user",
      "text": "Easy."
    },
    {
      "role": "assistant",
      "text": "You’re all set."
    },
    {
      "role": "user",
      "text": "Great."
    }
  ]
}