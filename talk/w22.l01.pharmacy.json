  "turns": [
    {
      "role": "AI",
      "en": "Hi. How can I help?",
      "zh": "嗨，需要什麼幫忙？"
    },
    {
      "role": "USER",
      "hint_en": "I have a sore throat.",
      "hint_zh": "我喉嚨痛。"
    },
    {
      "role": "AI",
      "en": "Any fever?",
      "zh": "有發燒嗎？"
    },
    {
      "role": "USER",
      "hint_en": "No fever.",
      "hint_zh": "沒有。"
    },
    {
      "role": "AI",
      "en": "How long has it been?",
      "zh": "多久了？"
    },
    {
      "role": "USER",
      "hint_en": "Two days.",
      "hint_zh": "兩天。"
    },
    {
      "role": "AI",
      "en": "Do you want tablets or spray?",
      "zh": "要喉片還是噴劑？"
    },
    {
      "role": "USER",
      "hint_en": "Tablets, please.",
      "hint_zh": "喉片。"
    },
    {
      "role": "AI",
      "en": "Any allergies?",
      "zh": "有過敏嗎？"
    },
    {
      "role": "USER",
      "hint_en": "I'm allergic to penicillin.",
      "hint_zh": "我對盤尼西林過敏。"
    },
    {
      "role": "AI",
      "en": "Okay. Take one every four hours.",
      "zh": "好。每四小時一顆。"
    },
    {
      "role": "USER",
      "hint_en": "Got it.",
      "hint_zh": "了解。"
    },
    {
      "role": "AI",
      "en": "Drink warm water, too.",
      "zh": "也多喝溫水。"
    },
    {
      "role": "USER",
      "hint_en": "I will. Thanks.",
      "hint_zh": "我會的，謝謝。"
    },
    {
      "role": "AI",
      "en": "Get well soon.",
      "zh": "祝早日康復。"
    },
    {
      "role": "USER",
      "hint_en": "Thanks. Bye.",
      "hint_zh": "謝謝，再見。"
    }
  ]
}