  "meta": {
    "week": "W01",
    "lesson": "05",
    "scene": "coffee.shop",
    "title_zh": "結帳與付款"
  },
  "dialogue": [
    { "role": "teacher", "text": "That’ll be five dollars.", "zh": "一共是五美元。", "ja": "お会計は5ドルです。" },
    { "role": "student", "text": "Okay.", "zh": "好。", "ja": "分かりました。" },

    { "role": "teacher", "text": "How would you like to pay?", "zh": "你想怎麼付款？", "ja": "お支払い方法はどうしますか？" },
    { "role": "student", "text": "Can I pay by card?", "zh": "我可以刷卡嗎？", "ja": "カードで払えますか？" },

    { "role": "teacher", "text": "Yes, card is fine.", "zh": "可以刷卡。", "ja": "はい、カードで大丈夫です。" },
    { "role": "student", "text": "Great.", "zh": "太好了。", "ja": "よかったです。" },

    { "role": "teacher", "text": "Please insert your card.", "zh": "請插入你的卡片。", "ja": "カードを挿入してください。" },
    { "role": "student", "text": "Like this?", "zh": "這樣嗎？", "ja": "こうですか？" },

    { "role": "teacher", "text": "Yes, that’s perfect.", "zh": "對，這樣就好。", "ja": "はい、それで大丈夫です。" },
    { "role": "student", "text": "Okay.", "zh": "好。", "ja": "はい。" },

    { "role": "teacher", "text": "You can choose a receipt.", "zh": "你可以選擇是否要收據。", "ja": "レシートを選べます。" },
    { "role": "student", "text": "I don’t need one.", "zh": "我不需要。", "ja": "結構です。" },

    { "role": "teacher", "text": "No problem.", "zh": "沒問題。", "ja": "かしこまりました。" },
    { "role": "student", "text": "Thanks.", "zh": "謝謝。", "ja": "ありがとうございます。" },

    { "role": "teacher", "text": "The payment is going through.", "zh": "付款正在處理中。", "ja": "決済を処理しています。" },
    { "role": "student", "text": "Alright.", "zh": "好。", "ja": "分かりました。" },

    { "role": "teacher", "text": "It’s approved.", "zh": "已經完成了。", "ja": "承認されました。" },
    { "role": "student", "text": "That was fast.", "zh": "很快呢。", "ja": "早いですね。" },

    { "role": "teacher", "text": "Here’s your card back.", "zh": "這是你的卡片。", "ja": "カードをお返しします。" },
    { "role": "student", "text": "Thank you.", "zh": "謝謝你。", "ja": "ありがとうございます。" },

    { "role": "teacher", "text": "We’ll call your name soon.", "zh": "等一下會叫你的名字。", "ja": "もうすぐお名前をお呼びします。" },
    { "role": "student", "text": "Okay, I’ll wait.", "zh": "好，我會等。", "ja": "分かりました。待ちます。" },

    { "role": "teacher", "text": "Please wait over there.", "zh": "請在那邊等候。", "ja": "あちらでお待ちください。" },
    { "role": "student", "text": "Sure.", "zh": "好的。", "ja": "はい。" }
  ]
}

