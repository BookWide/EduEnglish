  "id": "w42.102.customer_support",
  "meta": {
    "title": "W42-2 · Customer Support（追蹤進度）",
    "week": 42,
    "lesson": 2
  },
  "dialogue": [
    {
      "role": "assistant",
      "text": "Hello, how can I help?"
    },
    {
      "role": "user",
      "text": "I’m following up on my case."
    },
    {
      "role": "assistant",
      "text": "Do you have a case number?"
    },
    {
      "role": "user",
      "text": "Yes, 3021."
    },
    {
      "role": "assistant",
      "text": "Thanks. It’s still being reviewed."
    },
    {
      "role": "user",
      "text": "How long will it take?"
    },
    {
      "role": "assistant",
      "text": "Within 24 hours."
    },
    {
      "role": "user",
      "text": "Can you mark it urgent?"
    },
    {
      "role": "assistant",
      "text": "Yes, I’ll escalate it."
    },
    {
      "role": "user",
      "text": "Thank you."
    },
    {
      "role": "assistant",
      "text": "You’ll get an email update."
    },
    {
      "role": "user",
      "text": "Okay."
    },
    {
      "role": "assistant",
      "text": "Anything else I can do?"
    },
    {
      "role": "user",
      "text": "No, that’s it."
    },
    {
      "role": "assistant",
      "text": "Sorry for the wait."
    },
    {
      "role": "user",
      "text": "Thanks."
    }
  ]
}