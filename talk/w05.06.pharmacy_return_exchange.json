  "dialogue": [
    {
      "role": "teacher",
      "text": "Hello! How can I help you?"
    },
    {
      "role": "student",
      "text": "Hi, I think I bought the wrong thing."
    },
    {
      "role": "teacher",
      "text": "What did you buy?"
    },
    {
      "role": "student",
      "text": "This cough syrup."
    },
    {
      "role": "teacher",
      "text": "What seems wrong with it?"
    },
    {
      "role": "student",
      "text": "It makes me too sleepy."
    },
    {
      "role": "teacher",
      "text": "I see. Is it opened?"
    },
    {
      "role": "student",
      "text": "No, it’s unopened."
    },
    {
      "role": "teacher",
      "text": "Do you have the receipt?"
    },
    {
      "role": "student",
      "text": "Yes, here it is."
    },
    {
      "role": "teacher",
      "text": "Would you like to exchange it?"
    },
    {
      "role": "student",
      "text": "Yes, for a non-drowsy one."
    },
    {
      "role": "teacher",
      "text": "Okay. This one is non-drowsy."
    },
    {
      "role": "student",
      "text": "Great."
    },
    {
      "role": "teacher",
      "text": "How often should I take it?"
    },
    {
      "role": "student",
      "text": "Two teaspoons, three times a day."
    },
    {
      "role": "teacher",
      "text": "Should I take it after meals?"
    },
    {
      "role": "student",
      "text": "Yes, after meals is better."
    },
    {
      "role": "teacher",
      "text": "Any other symptoms, like fever?"
    },
    {
      "role": "student",
      "text": "No fever."
    },
    {
      "role": "teacher",
      "text": "If symptoms last more than a week, see a doctor."
    },
    {
      "role": "student",
      "text": "Okay."
    },
    {
      "role": "teacher",
      "text": "Do you want a smaller bottle?"
    },
    {
      "role": "student",
      "text": "Yes, smaller is fine."
    },
    {
      "role": "teacher",
      "text": "Alright, I’ll process the exchange."
    },
    {
      "role": "student",
      "text": "Thank you."
    },
    {
      "role": "teacher",
      "text": "Here’s your new receipt."
    },
    {
      "role": "student",
      "text": "Thanks."
    },
    {
      "role": "teacher",
      "text": "Take care!"
    },
    {
      "role": "student",
      "text": "You too."
    }
  ]
