  },
  "dialogue": [
    {
      "role": "assistant",
      "text": "Support desk, hello."
    },
    {
      "role": "user",
      "text": "Can I speak to a supervisor?"
    },
    {
      "role": "assistant",
      "text": "May I ask what it’s about?"
    },
    {
      "role": "user",
      "text": "It’s an ongoing billing issue."
    },
    {
      "role": "assistant",
      "text": "Understood. Please hold."
    },
    {
      "role": "user",
      "text": "Okay."
    },
    {
      "role": "assistant",
      "text": "Thanks for waiting. Supervisor here."
    },
    {
      "role": "user",
      "text": "Hi, I need this resolved today."
    },
    {
      "role": "assistant",
      "text": "I see your history. We’ll take responsibility."
    },
    {
      "role": "user",
      "text": "What will you do?"
    },
    {
      "role": "assistant",
      "text": "We’ll correct the charge and email confirmation."
    },
    {
      "role": "user",
      "text": "Good."
    },
    {
      "role": "assistant",
      "text": "It will be done within an hour."
    },
    {
      "role": "user",
      "text": "Thank you."
    },
    {
      "role": "assistant",
      "text": "Anything else?"
    },
    {
      "role": "user",
      "text": "No."
    }
  ]
}