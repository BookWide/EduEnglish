  "dialogue": [
    {
      "role": "assistant",
      "text": "Hi, service desk."
    },
    {
      "role": "user",
      "text": "Hi, my device isn’t working."
    },
    {
      "role": "assistant",
      "text": "What’s the problem exactly?"
    },
    {
      "role": "user",
      "text": "It won’t turn on."
    },
    {
      "role": "assistant",
      "text": "Any lights or sounds?"
    },
    {
      "role": "user",
      "text": "No, nothing."
    },
    {
      "role": "assistant",
      "text": "When did it start?"
    },
    {
      "role": "user",
      "text": "Last night."
    },
    {
      "role": "assistant",
      "text": "Did it get wet or dropped?"
    },
    {
      "role": "user",
      "text": "No."
    },
    {
      "role": "assistant",
      "text": "Let’s try a quick reset."
    },
    {
      "role": "user",
      "text": "Okay."
    },
    {
      "role": "assistant",
      "text": "Hold the power button for 10 seconds."
    },
    {
      "role": "user",
      "text": "Done. Still nothing."
    },
    {
      "role": "assistant",
      "text": "Okay, we may need to inspect it."
    },
    {
      "role": "user",
      "text": "Alright."
    }
  ]
}