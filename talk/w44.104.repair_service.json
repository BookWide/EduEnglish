{
  "id": "w44.104.repair_service",
  "meta": {
    "title": "W44-4 · Repair Service（費用確認）",
    "week": 44,
    "lesson": 4
  },
  "dialogue": [
    {
      "role": "assistant",
      "text": "Before repair, I need the cost."
    },
    {
      "role": "user",
      "text": "Of course."
    },
    {
      "role": "assistant",
      "text": "Is it under warranty?"
    },
    {
      "role": "user",
      "text": "I’m not sure."
    },
    {
      "role": "assistant",
      "text": "Let me check the serial number."
    },
    {
      "role": "user",
      "text": "Here it is."
    },
    {
      "role": "assistant",
      "text": "It’s out of warranty."
    },
    {
      "role": "user",
      "text": "Okay."
    },
    {
      "role": "assistant",
      "text": "Diagnosis fee is $20."
    },
    {
      "role": "user",
      "text": "And the repair?"
    },
    {
      "role": "assistant",
      "text": "If it’s the battery, $60."
    },
    {
      "role": "user",
      "text": "That’s acceptable."
    },
    {
      "role": "assistant",
      "text": "We’ll confirm before proceeding."
    },
    {
      "role": "user",
      "text": "Please call me first."
    },
    {
      "role": "assistant",
      "text": "Sure, we will."
    },
    {
      "role": "user",
      "text": "Thanks."
    }
  ]
}