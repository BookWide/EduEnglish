  "dialogue": [
    {
      "role": "assistant",
      "text": "Here’s some context."
    },
    {
      "role": "user",
      "text": "Sure."
    },
    {
      "role": "assistant",
      "text": "We received new requirements."
    },
    {
      "role": "user",
      "text": "From the client?"
    },
    {
      "role": "assistant",
      "text": "Yes, last Friday."
    },
    {
      "role": "user",
      "text": "What changed?"
    },
    {
      "role": "assistant",
      "text": "They want an extra feature."
    },
    {
      "role": "user",
      "text": "Does it affect scope?"
    },
    {
      "role": "assistant",
      "text": "Yes, slightly."
    },
    {
      "role": "user",
      "text": "So we need an update."
    },
    {
      "role": "assistant",
      "text": "Exactly."
    },
    {
      "role": "user",
      "text": "Let’s adjust the plan."
    },
    {
      "role": "assistant",
      "text": "I’ll summarize in an email."
    },
    {
      "role": "user",
      "text": "Great."
    },
    {
      "role": "assistant",
      "text": "I’ll send it by end of day."
    },
    {
      "role": "user",
      "text": "Thank you."
    },
    {
      "role": "assistant",
      "text": "What do you do for work?"
    },
    {
      "role": "user",
      "text": "I work in business."
    },
    {
      "role": "assistant",
      "text": "How long have you worked there?"
    },
    {
      "role": "user",
      "text": "About two years."
    },
    {
      "role": "assistant",
      "text": "Do you like your job?"
    },
    {
      "role": "user",
      "text": "Yes, I do."
    },
    {
      "role": "assistant",
      "text": "Are you busy this week?"
    },
    {
      "role": "user",
      "text": "A little busy."
    },
    {
      "role": "assistant",
      "text": "Do you have any meetings today?"
    },
    {
      "role": "user",
      "text": "Yes, one meeting."
    },
    {
      "role": "assistant",
      "text": "What time is it?"
    },
    {
      "role": "user",
      "text": "At 3 p.m."
    },
    {
      "role": "assistant",
      "text": "Good luck."
    },
    {
      "role": "user",
      "text": "Thanks!"
    },
    {
      "role": "assistant",
      "text": "Talk to you later."
    },
    {
      "role": "user",
      "text": "See you."
    },
    {
